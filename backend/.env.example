# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,backend,your-domain.com,your-alb-url.amazonaws.com

# Database Configuration (Use AWS RDS in production)
DB_ENGINE=mysql.connector.django
DB_NAME=course_registration
DB_USER=root
DB_PASSWORD=change-this-password
DB_HOST=localhost
DB_PORT=3306

# AWS RDS Configuration (for production)
# DB_HOST=your-rds-endpoint.rds.amazonaws.com
# DB_PORT=3306
# DB_NAME=course_registration
# DB_USER=admin
# DB_PASSWORD=your-secure-rds-password

# Email Configuration (AWS SES recommended for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@course-registration.com

# For AWS SES (production):
# EMAIL_BACKEND=django_ses.SESBackend
# AWS_SES_REGION_NAME=us-east-1
# AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonaws.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-cloudfront-domain.cloudfront.net,https://your-domain.com

# AWS Configuration (Optional - for S3, SES, etc.)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Static Files (for S3)
# USE_S3=False
# AWS_S3_CUSTOM_DOMAIN=your-bucket.s3.amazonaws.com

# Registration Settings
REGISTRATION_OPEN=True

# Security Settings (Enable in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
